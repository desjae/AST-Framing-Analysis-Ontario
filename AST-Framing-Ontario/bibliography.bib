@article{rothmanSchoolEnvironmentStudent2017,
  title = {The School Environment and Student Car Drop-off at Elementary Schools},
  author = {Rothman, Linda and Buliung, Ron and Howard, Andrew and Macarthur, Colin and Macpherson, Alison},
