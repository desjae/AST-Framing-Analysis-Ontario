@article{laroucheRatherBikeSchool2016,
  title = {''{{I}}'d Rather Bike to School!'': Profiling Children Who Would Prefer to Cycle to School},
  author = {Larouche, Richard and Stone, Michelle and Buliung, Ron N. and Faulkner, Guy},
